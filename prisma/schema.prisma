// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  address   String?
  password  String
  lastName  String
  firstName String
  image     String?

  Cart   Cart   @relation(fields: [cartId], references: [id])
  cartId String @unique

  Historical   Historical @relation(fields: [historicalId], references: [id])
  historicalId String     @unique
}

model Cart {
  id       String          @id @default(uuid())
  isEmpty  Boolean         @default(true)
  User     User?
  products Cart_products[]
}

model Historical {
  id       String                @id @default(uuid())
  products Historical_products[]
  User     User?
}

model Cart_products {
  id        String @id @default(uuid())
  productId String
  cartId    String
  amount    Int
  Cart      Cart   @relation(fields: [cartId], references: [id])
}

model Historical_products {
  id           String     @id @default(uuid())
  orderBuyId   String
  historicalId String
  date         DateTime
  Historical   Historical @relation(fields: [historicalId], references: [id])
}
