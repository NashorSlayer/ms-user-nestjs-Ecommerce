// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        String  @id @default(uuid())
  email     String  @unique
  address   String?
  password  String
  lastName  String
  firstName String
  image     String?

  Cart   carts  @relation(fields: [cartId], references: [id])
  cartId String @unique

  Historical   historicals @relation(fields: [historicalId], references: [id])
  historicalId String      @unique
}

model carts {
  id       String          @id @default(uuid())
  isEmpty  Boolean         @default(true)
  User     users?
  products cart_products[]
}

model historicals {
  id       String                @id @default(uuid())
  products historical_products[]
  User     users?
}

model cart_products {
  id        String @id @default(uuid())
  productId String
  cartId    String
  amount    Int
  Cart      carts  @relation(fields: [cartId], references: [id])
}

model historical_products {
  id           String      @id @default(uuid())
  orderBuyId   String
  historicalId String
  date         DateTime
  Historical   historicals @relation(fields: [historicalId], references: [id])
}
